<% provide(:title, 'Home') %>

<% if signed_in? %>
<div class="row">
	<aside class="span4">
		<section>
			<%= render "shared/user_info" %>
		</section>
		<section>
			<%= render "shared/micropost_form" %>
		</section>
	</aside>


<div class="span8">
	<h3>Micropost Feed</h3>
	<%= render "shared/feed" %>
</div>
</div>

<% else %>

<div class="background-custom">
	
<div class="front-page center"> 
	
<h1><span>Singapore Review</span></h1>
<p><span>Discover Singapore's best in film, music, art and food</span></p>
<span><%= link_to "Sign Up Now!", signup_path, class: "btn btn-large btn-primary" %></span>

</div>

</div>

<% end %>

